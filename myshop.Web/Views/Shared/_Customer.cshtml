                    <li class="active"><a href="/Customer/Home/Index">Home</a></li>
                    <li><a href=""></a>All Products</li>
                    <li><a href=""></a>about us</li>
                    <li><a href=""></a>contact</li>
                </ul>
                <div >

                    <partial name="_LoginPartial" />
                  
                </div>
           
            </div>
  
        </nav>
   
    </header>


  


  
    @RenderBody()






    <footer>
        <div class="container">

            <div class="big_row">
                <img src="img/logo-black.png" alt="">

                <div class="hotline">
                    <i class="fa-solid fa-phone"></i>
                    <div class="text">
                        <h5>Hotline Free 24/24:</h5>
                        <h6>0568230334</h6>
                    </div>
                </div>
                <p>Lorem ipsum, dolor sit amet consectetur </p>
            </div>


            <div class="row">
                <h4>FAQs & Help</h4>

                <div class="links">
                    <a href="#">F.A.Q</a>
                    <a href="#">Ordering Tracking</a>
                    <a href="#">Contacts</a>
                </div>


            </div>

            <div class="row">
                <h4>Shipping & Delivery</h4>

                <div class="links">
                    <a href="#">Delivery Information</a>
                    <a href="#">Payment & Shipping</a>
