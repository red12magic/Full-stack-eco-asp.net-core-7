    <header>
        <div class="container top-nav">
            <a href="#" class="logo"><img src="img/baraa.jpg" alt=""></a>
            <form action="" class="search">
                <input type="search" placeholder="Search for products">
                <button type="submit">Search</button>
            </form>
            <div onclick="open_cart()" class="cart_header">
            @if(User.Identity.IsAuthenticated){

          
                <div class="icon_cart">
                        <a href="/Customer/Cart/Summary"> <i class="fa-solid fa-cart-plus"></i></a>
